* {
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	font: normal 14px 'Segoe UI', Tahoma;
}
body {
	margin: 0px;
	padding: 0px;
}
html, body {
	height: 100%;
	width: 100%;
}
.modalOverlay {
	position: fixed;
	width: 100%;
	height: 100%;
	left: 0px;
	top: 0px;
	padding: 0px;
	background: url("../graphics/cccccc.png");
	padding: 40px;
	display: none;
}
.modalDialog {
	background: #ffffff;
	display: inline-block;
	/*height: 100%;
	width: 100%;*/
	position: relative;
	min-height: 60px;
	min-width: 350px;
}
.modalHeader {
	background: #73880A;
	height: 25px;
	position: absolute;
	top: 0px;
	width: 100%;
}
.modalTitle {
	float: left;
	padding: 0 0 0 10px;
	line-height: 25px;
	color: #ffffff;
}
.modalHeaderButtons {
	float: right;
	padding: 0 10px 0 0;
	line-height: 25px;
	color: #ffffff;
}
.modalHeaderButtons a {
	color: #ffffff;
	text-decoration: none;
}
.modalHeaderButtons a:hover {
	text-decoration: underline;
}
.modalFooter {
	background: #C79810;
	height: 35px;
	line-height: 35px;
	position: absolute;
	bottom: 0px;
	width: 100%;
}

.modalContent {
	background: #decee6;
	width: 100%;
	height: 100%;
	overflow: auto;
	border-top: 25px solid #ff0000;
	border-bottom: 35px solid #ffff00;
	text-align: left;
}
.modalCell {
	/*width: 100%;
	height: 100%;*/
}
.modalTable {
	table-layout: fixed;
	border-collapse: collapse;
}

.p10 {
	padding: 10px;
}

.maximizedModal .modalCell {
	width: 100%;
	height: 100%;
}

.maximizedModal .modalCell, .maximizedModal .modalDialog {
	width: 100% !important;
	height: 100% !important;
}

.minimizedModal .modalContent, .minimizedModal .modalFooter {
	display: none;
}

.minimizedModal .modalDialog {
	min-height: 0;
	height: auto !important;
	width: auto !important;
}


.minimizedModal .modalCell {
	vertical-align: bottom;
}

.smSpan {
	display: none;
}

.minimizedModal .smSpan {
	display: inline;
}

.maximizedModal .yui-resize-handle, .minimizedModal .yui-resize-handle {
	display: none !important;
}

.hidden {
	display: none;
}